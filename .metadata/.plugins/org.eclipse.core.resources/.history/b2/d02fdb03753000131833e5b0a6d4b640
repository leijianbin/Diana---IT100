import acm.graphics.*;
import acm.program.*;
import java.awt.*;

public class ProgramHierarchy extends GraphicsProgram {
	
	
	public void run() {
		int centerx = getWidth()/2;
		int centery = getHeight()/2;

		GLabel label1 = new GLabel("Program");
		GLabel label2 = new GLabel("GraphicsProgram");
		GLabel label3 = new GLabel("ConsoleProgram");
		GLabel label4 = new GLabel("DialogProgram");
		
		double rectWidth = label2.getWidth() + 20;
		double rectHeight = label2.getHeight() + 20;
		
		
		double posx = centerx - (label.getWidth()/2);
		double posy = centery - (label.getAscent()/2);
		GLabel label1 = new GLabel("Program",posx,posy);

		add(label1);
	}
}

